@model StudentManagement.Models.ViewModels.ReceiptViewModel
@{
    Layout = null; // Quan trọng: Không sử dụng Layout
    var tuition = Model.Tuition;
    var student = tuition.Enrollment.Student;
    var classItem = tuition.Enrollment.Class;
    var course = classItem.Course;
    var totalRemaining = tuition.TotalFee - tuition.AmountPaid;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Biên Lai Thu Tiền Học Phí</title>
    <style>
        body {
            font-family: 'DejaVu Sans', sans-serif;
            font-size: 10pt;
            margin: 20px;
        }

        .receipt-container {
            width: 100%;
            border: 1px solid #ccc;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .title {
            font-size: 14pt;
            font-weight: bold;
            margin-bottom: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .summary-box {
            border: 2px solid #000;
            padding: 10px;
            margin-top: 20px;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="receipt-container">
        <div class="header">
            <p style="margin: 0;">TRUNG TÂM TIN HỌC XYZ</p>
            <p style="margin: 0; font-size: 8pt;">Địa chỉ: 123 Đường ABC, Quận 1, TP. Hồ Chí Minh</p>
            <div class="title">BIÊN LAI THU TIỀN HỌC PHÍ</div>
            <p style="margin: 0; font-size: 9pt;">Ngày in: @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
        </div>

        <hr />

        <h4>1. Thông tin Học viên</h4>
        <table>
            <tr>
                <td style="width: 30%;"><strong>Mã SV:</strong></td>
                <td style="width: 70%;">@student.StudentCode</td>
            </tr>
            <tr>
                <td><strong>Họ và Tên:</strong></td>
                <td>@student.FullName</td>
            </tr>
            <tr>
                <td><strong>Lớp Học:</strong></td>
                <td>@classItem.ClassName (@classItem.ClassCode)</td>
            </tr>
            <tr>
                <td><strong>Khóa Học:</strong></td>
                <td>@course.CourseName</td>
            </tr>
        </table>

        <h4 style="margin-top: 20px;">2. Chi tiết Khoản phí</h4>
        <table>
            <tr>
                <td style="width: 30%;"><strong>Tổng Học Phí:</strong></td>
                <td class="text-right">@tuition.TotalFee.ToString("N0") VNĐ</td>
            </tr>
            <tr>
                <td><strong>Đã Đóng (trước giao dịch này):</strong></td>
                <td class="text-right">@(tuition.AmountPaid - tuition.Receipts.LastOrDefault()?.Amount ?? 0).ToString("N0") VNĐ</td>
            </tr>
            <tr>
                <td><strong>Số Tiền Thanh Toán (Giao dịch này):</strong></td>
                <td class="text-right"><strong style="color: green;">@(tuition.Receipts.LastOrDefault()?.Amount ?? 0).ToString("N0") VNĐ</strong></td>
            </tr>
            <tr>
                <td><strong>Tổng Cộng Đã Đóng:</strong></td>
                <td class="text-right">@tuition.AmountPaid.ToString("N0") VNĐ</td>
            </tr>
            <tr>
                <td><strong>Còn Phải Thu:</strong></td>
                <td class="text-right"><strong style="color: @(totalRemaining > 0 ? "red" : "green");">@totalRemaining.ToString("N0") VNĐ</strong></td>
            </tr>
        </table>

        @if (tuition.Receipts.Any())
        {
            var latestReceipt = tuition.Receipts.OrderByDescending(r => r.PaymentDate).First();
            <h4 style="margin-top: 20px;">3. Thông tin Giao dịch</h4>
            <table>
                <tr>
                    <td style="width: 30%;"><strong>Mã Biên Lai:</strong></td>
                    <td>@latestReceipt.ReceiptCode</td>
                </tr>
                <tr>
                    <td><strong>Ngày Thu:</strong></td>
                    <td>@latestReceipt.PaymentDate.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
                <tr>
                    <td><strong>Người Thu:</strong></td>
                    <td>@latestReceipt.Cashier?.FullName</td>
                </tr>
                <tr>
                    <td><strong>Ghi Chú:</strong></td>
                    <td>@latestReceipt.Note</td>
                </tr>
            </table>
        }


        <div style="margin-top: 40px; display: flex; justify-content: space-between;">
            <div class="text-center" style="width: 45%;">
                <p><strong>Người Nộp Tiền</strong></p>
                <br /><br />
                <p>(Ký, ghi rõ họ tên)</p>
            </div>
            <div class="text-center" style="width: 45%;">
                <p><strong>Người Thu Tiền</strong></p>
                <br /><br />
                <p>(Ký, ghi rõ họ tên)</p>
            </div>
        </div>
    </div>

</body>
</html>