@model StudentManagement.Models.User
@{
    ViewData["Title"] = "Đổi Mật Khẩu: " + (Model.Username);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-header">
    <h1 class="page-title"><i class="fas fa-key"></i> Đổi Mật Khẩu Tài Khoản</h1>
</div>

<div class="card shadow mb-4 col-lg-6 mx-auto">
    <div class="card-header bg-warning text-white">
        <i class="fas fa-user"></i> Đổi Mật Khẩu cho: <strong>@(Model.FullName ?? Model.Username)</strong>
    </div>
    <div class="card-body">
        <form asp-action="ChangePassword" asp-route-id="@Model.UserId" asp-controller="Admin" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="UserId" value="@Model.UserId" />

            @* Hiển thị thông báo lỗi nếu có *@
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="mb-3">
                <label for="NewPassword" class="form-label"><i class="fas fa-lock"></i> Mật Khẩu Mới <span class="text-danger">*</span></label>
                <input type="password" id="NewPassword" name="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
            </div>

            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label"><i class="fas fa-lock"></i> Xác Nhận Mật Khẩu Mới <span class="text-danger">*</span></label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu mới" required />
            </div>

            <hr />

            <div class="form-actions text-end">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-save"></i> Cập Nhật Mật Khẩu
                </button>
                <a asp-action="Users" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>