@section Scripts {
    <style>
        .finance-card {
            border-radius: 10px;
            padding: 20px;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 15px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: all 0.3s;
        }

            .finance-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.15);
            }

        .card-revenue {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        }

        .card-pending {
            background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
        }

        .card-paid {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        .card-overdue {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .finance-icon {
            font-size: 45px;
            opacity: 0.8;
        }

        .finance-content h3 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
        }

        .finance-content p {
            margin: 5px 0 0 0;
            font-size: 13px;
            opacity: 0.9;
        }

        .student-info, .class-info {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .payment-progress {
            min-width: 100px;
        }

        .table-danger-light {
            background-color: #f8d7da !important;
        }

        .header-filters .badge {
            font-size: 0.85em;
            padding: 6px 12px;
        }
    </style>

    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchTuition').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Select all checkboxes
            $('#selectAll').click(function() {
                $('.row-checkbox').prop('checked', this.checked);
            });

            // Filter by status
            $('#filterStatus').change(function() {
                var status = $(this).val().toLowerCase();
                $('tbody tr').filter(function() {
                    if (status === '') {
                        $(this).show();
                    } else {
                        var rowStatus = $(this).find('.badge').first().text().toLowerCase();
                        $(this).toggle(rowStatus.indexOf(status) > -1);
                    }
                });
            });
            $('#selectStudentTuition').change(function() {
                var tuitionId = $(this).val();

                // Hàm định dạng tiền tệ
                var formatVND = (amount) => (amount ? amount.toLocaleString('vi-VN') : '0') + ' VNĐ';

                // Reset các trường
                $('#modalClassName').val('');
                $('#modalTotalFee').val('0 VNĐ');
                $('#modalAmountPaid').val('0 VNĐ');
                $('#modalRemaining').val('0 VNĐ');
                $('#inputAmountPaid').val('');
                $('#inputAmountPaid').removeAttr('max');

                if (tuitionId) {
                    // Gửi yêu cầu AJAX đến Controller để lấy thông tin chi tiết
                    $.get('/Admin/GetTuitionDetails', { tuitionId: tuitionId }, function(data) {
                        if (data && data.className) {
                            $('#modalClassName').val(data.className);
                            $('#modalTotalFee').val(formatVND(data.totalFee));
                            $('#modalAmountPaid').val(formatVND(data.amountPaid));
                            $('#modalRemaining').val(formatVND(data.remaining));

                            // Đặt giá trị còn lại vào ô Số Tiền Thu và thiết lập giới hạn
                            $('#inputAmountPaid').val(data.remaining);
                            $('#inputAmountPaid').attr('max', data.remaining);
                        }
                    }).fail(function() {
                        console.error('Lỗi khi tải thông tin học phí.');
                    });
                }
            });
            // Xử lý nút "Thu tiền" trong bảng
            $(document).ready(function () {

                // Hàm format tiền tệ (cần thiết nếu muốn hiển thị lại)
                var formatVND = (amount) => (amount ? amount.toLocaleString('vi-VN') : '0') + ' VNĐ';

                // Lắng nghe sự kiện click trên nút "Thu tiền" trong bảng
                $(".open-payment-modal").click(function () {
                    var tuitionId = $(this).data("tuition-id");

                    // Gửi yêu cầu AJAX để lấy chi tiết khoản phí
                    $.get('/Admin/GetTuitionDetails', { tuitionId: tuitionId }, function(data) {
                        if (data && data.remainingDecimal > 0) {

                            // 1. Đặt tuitionId vào dropdown (cần cho việc submit form)
                            $('#selectStudentTuition').val(tuitionId);

                            // 2. Điền dữ liệu chi tiết vào các trường trong Modal
                            // (Sử dụng ID đúng như trong Modal HTML của bạn)
                            $('#modalClassName').val(data.className);
                            $('#modalTotalFee').val(formatVND(data.totalFeeDecimal)); // Giả sử Controller trả về TotalFeeDecimal
                            $('#modalAmountPaid').val(formatVND(data.amountPaidDecimal)); // Giả sử Controller trả về AmountPaidDecimal
                            $('#modalRemaining').val(formatVND(data.remainingDecimal));

                            // 3. Thiết lập số tiền cần thu và giới hạn tối đa
                            $('#inputAmountPaid').val(data.remainingDecimal);
                            $('#inputAmountPaid').attr('max', data.remainingDecimal);

                            // 4. Mở Modal
                            // Khởi tạo Bootstrap Modal và hiển thị
                            var paymentModal = new bootstrap.Modal(document.getElementById('recordPaymentModal'));
                            paymentModal.show();

                        } else if (data && data.remainingDecimal <= 0) {
                            alert('Khoản học phí này đã được thanh toán đủ.');
                        } else {
                            alert('Không thể tải thông tin học phí.');
                        }
                    });
                });
            });
            // --- Xử lý nút XEM CHI TIẾT (open-detail-modal) ---
            var formatVND = (amount) => (amount ? amount.toLocaleString('vi-VN') : '0') + ' VNĐ';
            $(document).on('click', '.open-detail-modal', function (e) {
                e.preventDefault();
                const tuitionId = $(this).data('tuition-id');
                const $modalBody = $('#tuitionDetailModalBody');

                // 1. Hiển thị trạng thái Loading
                $modalBody.html('<p class="text-center p-5"><i class="fas fa-spinner fa-spin fa-2x"></i><br> Đang tải chi tiết học phí...</p>');
                $('#tuitionDetailModalLabel').text(`Chi Tiết Khoản Học Phí ID: #${tuitionId}`);

                // 2. Gọi AJAX để lấy dữ liệu chi tiết
                // Tận dụng Action GetTuitionDetails đã có, nhưng cần thêm logic hiển thị.
                $.get('/Admin/GetTuitionDetails', { tuitionId: tuitionId }, function(data) {
                    // Lấy thông tin từ hàng trong bảng (giả định)
                    const $row = $(`.open-detail-modal[data-tuition-id="${tuitionId}"]`).closest('tr');
                    const studentName = $row.find('.student-info strong').text().trim();
                    const studentCode = $row.find('.student-info small').text().trim();
                    const courseName = $row.find('.class-info small').text().replace(/.* fas fa-book.* /, '').trim();
                    const statusText = $row.find('.badge').text().trim();
                    const dueDate = $row.find('td:nth-child(9) small').text().trim().replace(/.*fas fa-calendar-times|check.* /, '').trim();

                    const remaining = data.remainingDecimal;
                    const remainingText = remaining > 0 ? `<strong class="text-danger">${formatVND(remaining)}</strong>` : `<strong class="text-success">Đã hoàn tất</strong>`;
                    const paymentStatus = remaining > 0 ? `<span class="badge bg-warning text-dark">${statusText}</span>` : `<span class="badge bg-success">${statusText}</span>`;

                    // 3. Tạo HTML hiển thị
                    const detailHtml = `
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <p><strong><i class="fas fa-user-graduate text-primary"></i> Sinh Viên:</strong></p>
                                <p class="form-control-static">${studentName} (<small>${studentCode}</small>)</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <p><strong><i class="fas fa-chalkboard text-primary"></i> Lớp Học:</strong></p>
                                <p class="form-control-static">${data.className} (<small>${courseName}</small>)</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row text-center">
                            <div class="col-md-4">
                                <p class="text-muted mb-1">Tổng Học Phí</p>
                                <h4 class="text-dark">${formatVND(data.totalFeeDecimal)}</h4>
                            </div>
                            <div class="col-md-4">
                                <p class="text-muted mb-1">Đã Đóng</p>
                                <h4 class="text-success">${formatVND(data.amountPaidDecimal)}</h4>
                            </div>
                            <div class="col-md-4">
                                <p class="text-muted mb-1">Còn Lại</p>
                                <h4 class="text-danger">${formatVND(data.remainingDecimal)}</h4>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong><i class="fas fa-calendar-alt text-primary"></i> Hạn Đóng:</strong></p>
                                <p class="form-control-static">${dueDate}</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong><i class="fas fa-info-circle text-primary"></i> Trạng Thái:</strong></p>
                                <p class="form-control-static">${paymentStatus}</p>
                            </div>
                        </div>
                        <div class="mt-3">
                            <p><strong><i class="fas fa-sticky-note text-primary"></i> Ghi Chú Thanh Toán (Tạm thời):</strong></p>
                            <p class="border p-3 rounded bg-light text-muted">Chức năng lưu ghi chú chi tiết sẽ được thêm vào trong tương lai.</p>
                        </div>
                    `;
                    $modalBody.html(detailHtml);
                }).fail(function() {
                    $modalBody.html('<p class="text-danger text-center p-5"><i class="fas fa-exclamation-triangle fa-2x"></i><br> Lỗi: Không thể tải chi tiết khoản học phí.</p>');
                    console.error('Lỗi khi tải thông tin học phí chi tiết.');
                });
            });
            // --- Xử lý nút LỊCH SỬ THANH TOÁN (btn-history) ---
            $(document).on('click', '.btn-history', function (e) {
                e.preventDefault();
                const tuitionId = $(this).data('tuition-id');
                const $modalBody = $('#paymentHistoryModalBody');

                // Hiển thị trạng thái Loading
                $('#historyTuitionIdDisplay').text(tuitionId);
                $modalBody.html('<p class="text-center p-5"><i class="fas fa-spinner fa-spin fa-2x"></i><br> Đang tải lịch sử giao dịch...</p>');

                // 1. Gọi AJAX để lấy dữ liệu lịch sử
                $.get('/Admin/GetPaymentHistory', { tuitionId: tuitionId }, function(response) {
                    if (response.success && response.history.length > 0) {
                        let historyHtml = `
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã Biên Lai</th>
                                        <th>Số Tiền (VNĐ)</th>
                                        <th>Ngày Thu</th>
                                        <th>Người Thu</th>
                                        <th>Ghi Chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                        `;

                        response.history.forEach(item => {
                            historyHtml += `
                                <tr>
                                    <td><strong>${item.receiptCode}</strong></td>
                                    <td class="text-success fw-bold">${item.amount}</td>
                                    <td>${item.paymentDate}</td>
                                    <td>${item.cashierName}</td>
                                    <td>${item.note || '<span class="text-muted fst-italic">Không có</span>'}</td>
                                </tr>
                            `;
                        });

                        historyHtml += `
                                </tbody>
                            </table>
                        `;
                        $modalBody.html(historyHtml);
                    } else {
                        $modalBody.html('<p class="text-center p-5 text-info"><i class="fas fa-info-circle fa-2x"></i><br> Khoản học phí này chưa có giao dịch nào được ghi nhận.</p>');
                    }

                    // 2. Mở Modal
                    var historyModal = new bootstrap.Modal(document.getElementById('paymentHistoryModal'));
                    historyModal.show();
                }).fail(function() {
                    $modalBody.html('<p class="text-danger text-center p-5"><i class="fas fa-exclamation-triangle fa-2x"></i><br> Lỗi: Không thể tải lịch sử giao dịch.</p>');
                });
            });
        });
    </script>
}
