@model IEnumerable<StudentManagement.Models.Tuition>
@{
    ViewData["Title"] = "Quản Lý Học Phí";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var totalRevenue = Model.Sum(t => t.AmountPaid);
    var totalPending = Model.Where(t => t.Status == "Pending").Sum(t => t.TotalFee - t.AmountPaid);
    var totalPaid = Model.Count(t => t.Status == "Paid");
    var totalOverdue = Model.Count(t =>
        t.TotalFee > t.AmountPaid && // Chỉ xét nếu còn nợ
        t.DueDate.HasValue &&
        t.DueDate.Value.ToDateTime(TimeOnly.MinValue) < DateTime.Now // Hạn đóng đã qua
    );
}

<div class="dashboard-header">
    <h1 class="page-title"><i class="fas fa-money-bill-wave"></i> Quản Lý Học Phí</h1>
    <div class="header-actions">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#recordPaymentModal">
            <i class="fas fa-plus-circle"></i> Ghi Nhận Thanh Toán
        </button>

        <form asp-action="ExportExcelTuition" asp-controller="Admin" method="post" class="d-inline">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-file-excel"></i> Xuất Excel
            </button>
        </form>

        <a asp-action="PrintReport" asp-controller="Admin" class="btn btn-info" target="_blank">
            <i class="fas fa-print"></i> In Báo Cáo
        </a>
    </div>
</div>

<!-- Financial Statistics -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="finance-card card-revenue">
            <div class="finance-icon">
                <i class="fas fa-coins"></i>
            </div>
            <div class="finance-content">
                <h3>@totalRevenue.ToString("N0") VNĐ</h3>
                <p>Tổng Doanh Thu</p>
                <div class="progress mt-2" style="height: 5px;">
                    <div class="progress-bar bg-success" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="finance-card card-pending">
            <div class="finance-icon">
                <i class="fas fa-hourglass-half"></i>
            </div>
            <div class="finance-content">
                <h3>@totalPending.ToString("N0") VNĐ</h3>
                <p>Còn Phải Thu</p>
                <div class="progress mt-2" style="height: 5px;">
                    <div class="progress-bar bg-warning" style="width: 75%"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="finance-card card-paid">
            <div class="finance-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="finance-content">
                <h3>@totalPaid</h3>
                <p>Đã Thanh Toán</p>
                <div class="progress mt-2" style="height: 5px;">
                    <div class="progress-bar bg-success" style="width: 85%"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="finance-card card-overdue">
            <div class="finance-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="finance-content">
                <h3>@totalOverdue</h3>
                <p>Quá Hạn</p>
                <div class="progress mt-2" style="height: 5px;">
                    <div class="progress-bar bg-danger" style="width: 20%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-receipt"></i> Danh Sách Học Phí</h5>
            <div class="header-filters">
                <span class="badge bg-success">Đã thu: @totalRevenue.ToString("N0") VNĐ</span>
                <span class="badge bg-warning text-dark ms-2">Còn lại: @totalPending.ToString("N0") VNĐ</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-controls mb-4">
            <form asp-action="Tuitions" asp-controller="Admin" method="get" id="filterForm">
                <div class="row">
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" class="form-control" name="search" placeholder="Tìm kiếm sinh viên, lớp..." value="@ViewData["CurrentSearch"]">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="filterStatus" onchange="document.getElementById('filterForm').submit()">
                            <option value="" selected="@(ViewData["CurrentStatus"] == null || ViewData["CurrentStatus"].ToString() == "" ? "selected" : null)">Tất cả trạng thái</option>
                            <option value="Paid" selected="@("Paid".Equals(ViewData["CurrentStatus"]))">Đã thanh toán</option>
                            <option value="Pending" selected="@("Pending".Equals(ViewData["CurrentStatus"]))">Chưa thanh toán</option>
                            <option value="Overdue" selected="@("Overdue".Equals(ViewData["CurrentStatus"]))">Quá hạn</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="filterMonth" onchange="document.getElementById('filterForm').submit()">
                            <option value="" selected="@(ViewData["CurrentMonth"] == null ? "selected" : null)">Tất cả tháng</option>
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i" selected="@(ViewData["CurrentMonth"]?.ToString() == i.ToString())">Tháng @i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="sortBy" onchange="document.getElementById('filterForm').submit()">
                            <option value="newest" selected="@("newest".Equals(ViewData["CurrentSort"]))">Mới nhất</option>
                            <option value="oldest" selected="@("oldest".Equals(ViewData["CurrentSort"]))">Cũ nhất</option>
                            <option value="amount_desc" selected="@("amount_desc".Equals(ViewData["CurrentSort"]))">Số tiền giảm dần</option>
                            <option value="amount_asc" selected="@("amount_asc".Equals(ViewData["CurrentSort"]))">Số tiền tăng dần</option>
                            <option value="overdue" selected="@("overdue".Equals(ViewData["CurrentSort"]))">Quá hạn trước</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" name="entriesPerPage" onchange="document.getElementById('filterForm').submit()">
                            <option value="10" selected="@(ViewData["CurrentEntries"]?.ToString() == "10" || ViewData["CurrentEntries"] == null)">10 dòng</option>
                            <option value="25" selected="@(ViewData["CurrentEntries"]?.ToString() == "25")">25 dòng</option>
                            <option value="50" selected="@(ViewData["CurrentEntries"]?.ToString() == "50")">50 dòng</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover data-table">
                <thead>
                    <tr>
                        <th width="3%"><input type="checkbox" id="selectAll"></th>
                        <th width="5%">ID</th>
                        <th width="12%">Sinh Viên</th>
                        <th width="15%">Lớp Học</th>
                        <th width="10%">Tổng Học Phí</th>
                        <th width="10%">Đã Đóng</th>
                        <th width="10%">Còn Lại</th>
                        <th width="10%">Tiến Độ</th>
                        <th width="8%">Hạn Đóng</th>
                        <th width="8%">Trạng Thái</th>
                        <th width="9%">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tuition in Model)
                    {
                        if (tuition == null)
                        {
                            continue;
                        }

                        var remaining = tuition.TotalFee - tuition.AmountPaid;
                        var percentage = tuition.TotalFee > 0 ? (tuition.AmountPaid / tuition.TotalFee) * 100 : 0;
                        var progressBarClass = percentage == 100 ? "bg-success" : percentage >= 50 ? "bg-info" : "bg-warning";

                        var statusBadge = tuition.Status switch
                        {
                            "Paid" => "bg-success",
                            "Pending" => "bg-warning text-dark",
                            "Overdue" => "bg-danger",
                            _ => "bg-secondary"
                        };

                        var statusText = tuition.Status switch
                        {
                            "Paid" => "Đã thanh toán",
                            "Pending" => "Chưa thanh toán",
                            "Overdue" => "Quá hạn",
                            _ => "Không xác định"
                        };

                        var isOverdue = tuition.DueDate.HasValue && tuition.DueDate.Value.ToDateTime(TimeOnly.MinValue) < DateTime.Now && remaining > 0;

                        <tr class="@(isOverdue ? "table-danger-light" : "")">
                            <td><input type="checkbox" class="row-checkbox"></td>
                            <td><strong class="text-primary">#@tuition.TuitionId</strong></td>
                            <td>
                                <div class="student-info">
                                    <i class="fas fa-user-graduate text-info"></i>
                                    <div>
                                        <strong>@tuition.Enrollment.Student.FullName</strong>
                                        <br><small class="text-muted">@tuition.Enrollment.Student.StudentCode</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="class-info">
                                    <strong>@tuition.Enrollment.Class.ClassName</strong>
                                    <br><small class="text-muted">
                                        <i class="fas fa-book"></i> @tuition.Enrollment.Class.Course.CourseName
                                    </small>
                                </div>
                            </td>
                            <td>
                                <strong class="text-dark">@tuition.TotalFee.ToString("N0") VNĐ</strong>
                            </td>
                            <td>
                                <span class="text-success fw-bold">@tuition.AmountPaid.ToString("N0") VNĐ</span>
                            </td>
                            <td>
                                @if (remaining > 0)
                                {
                                    <span class="text-danger fw-bold">@remaining.ToString("N0") VNĐ</span>
                                }
                                else
                                {
                                    <span class="text-muted">0 VNĐ</span>
                                }
                            </td>
                            <td>
                                <div class="payment-progress">
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar @progressBarClass" role="progressbar"
                                             style="width: @percentage%"
                                             aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                            @percentage.ToString("F0")%
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (tuition.DueDate.HasValue)
                                {
                                    <small class="@(isOverdue ? "text-danger fw-bold" : "text-muted")">
                                        <i class="fas fa-calendar-@(isOverdue ? "times" : "check")"></i>
                                        @tuition.DueDate.Value.ToString("dd/MM/yyyy")
                                    </small>
                                }
                                else
                                {
                                    <small class="text-muted fst-italic">Chưa có</small>
                                }
                            </td>
                            <td>
                                <span class="badge @statusBadge">@statusText</span>
                                @if (isOverdue)
                                {
                                    <br>

                                    <small class="text-danger"><i class="fas fa-exclamation-triangle"></i> Quá hạn</small>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn btn-sm btn-info open-detail-modal"
                                            title="Chi tiết"
                                            data-tuition-id="@tuition.TuitionId"
                                            data-bs-toggle="modal"
                                            data-bs-target="#tuitionDetailModal">
                                        <i class="fas fa-eye"></i>
                                    </button>

                                    @if (remaining > 0)
                                    {
                                        <button class="btn btn-sm btn-success open-payment-modal"
                                                title="Thu tiền"
                                                data-tuition-id="@tuition.TuitionId">
                                            <i class="fas fa-money-bill"></i>
                                        </button>

                                    }

                                    <a href="#"
                                       class="btn btn-sm btn-primary btn-history"
                                       title="Lịch sử thanh toán"
                                       data-tuition-id="@tuition.TuitionId">
                                        <i class="fas fa-history"></i>
                                    </a>

                                    <a href="@Url.Action("PrintReceipt", "Admin", new { id = tuition.TuitionId })"
                                       class="btn btn-sm btn-warning"
                                       title="In biên lai (Xuất PDF)"
                                       target="_blank">
                                        <i class="fas fa-print"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @{
            // Lấy thông tin phân trang từ ViewData (Cần Controller thiết lập)
            int currentPage = (int)(ViewData["CurrentPage"] ?? 1);
            int totalCount = (int)(ViewData["TotalCount"] ?? Model.Count());
            int entriesPerPage = (int)(ViewData["CurrentEntries"] ?? 10);

            // Tính toán tổng số trang
            int totalPages = (int)Math.Ceiling((double)totalCount / entriesPerPage);

            // Tính toán hiển thị 'từ' và 'đến'
            int startEntry = (currentPage - 1) * entriesPerPage + 1;
            int endEntry = Math.Min(currentPage * entriesPerPage, totalCount);

            // Lấy tất cả tham số lọc hiện tại (trừ pageNumber) để duy trì trạng thái
            var routeValues = new Dictionary<string, string>();
            if (routeValues.ContainsKey("pageNumber"))
            {
                routeValues.Remove("pageNumber");
            }
        }

        <div class="pagination-container">
            <div class="d-flex justify-content-between align-items-center">
                <div class="pagination-info">
                    Hiển thị <strong>@startEntry</strong> đến <strong>@endEntry</strong> trong tổng số <strong>@totalCount</strong> khoản học phí
                </div>

                @if (totalPages > 1)
                {
                    <nav>
                        <ul class="pagination mb-0">

                            @* ---- NÚT PREVIOUS ---- *@
                            <li class="page-item @(currentPage <= 1 ? "disabled" : null)">

                                @{
                                    routeValues["pageNumber"] = (currentPage - 1).ToString();
                                }

                                <a class="page-link"
                                   asp-action="Index"
                                   asp-all-route-data="@(routeValues)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @* ---- VÒNG LẶP SỐ TRANG ---- *@
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                routeValues["pageNumber"] = i.ToString();

                                <li class="page-item @(i == currentPage ? "active" : null)">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-all-route-data="@(routeValues)">
                                        @i
                                    </a>
                                </li>
                            }

                            @* ---- NÚT NEXT ---- *@
                            <li class="page-item @(currentPage >= totalPages ? "disabled" : null)">
                                @{
                                    routeValues["pageNumber"] = (currentPage + 1).ToString();
                                }

                                <a class="page-link"
                                   asp-action="Index"
                                   asp-all-route-data="@(routeValues)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>

                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal: Record Payment -->
<div class="modal fade" id="recordPaymentModal" tabindex="-1" aria-labelledby="recordPaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="recordPaymentModalLabel">
                    <i class="fas fa-money-bill-wave"></i> Ghi Nhận Thanh Toán
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="recordPaymentForm" asp-action="RecordPayment" asp-controller="Admin" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-user-graduate"></i> Sinh Viên <span class="text-danger">*</span></label>
                            <select class="form-select" id="selectStudentTuition" name="tuitionId" required>
                                <option value="">-- Chọn sinh viên --</option>
                                @foreach (var tuition in Model.Where(t => t.Status != "Paid"))
                                {
                                    <option value="@tuition.TuitionId">
                                        @tuition.Enrollment.Student.StudentCode - @tuition.Enrollment.Student.FullName
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-chalkboard"></i> Lớp Học</label>
                            <input type="text" class="form-control" id="modalClassName" readonly placeholder="Sẽ hiển thị sau khi chọn SV">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Tổng Học Phí</label>
                            <input type="text" class="form-control" id="modalTotalFee" readonly placeholder="0 VNĐ">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Đã Đóng</label>
                            <input type="text" class="form-control" id="modalAmountPaid" readonly placeholder="0 VNĐ">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label text-danger">Còn Lại</label>
                            <input type="text" class="form-control fw-bold text-danger" id="modalRemaining" readonly placeholder="0 VNĐ">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-money-bill"></i> Số Tiền Thu <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="inputAmountPaid" name="amountPaid" placeholder="Nhập số tiền" required min="1000">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fas fa-calendar"></i> Ngày Thu</label>
                            <input type="date" class="form-control" name="paymentDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><i class="fas fa-sticky-note"></i> Ghi Chú</label>
                        <textarea class="form-control" name="note" rows="3" placeholder="Ghi chú (nếu có)..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Hủy
                </button>
                <button type="submit" class="btn btn-success" form="recordPaymentForm">
                    <i class="fas fa-save"></i> Lưu Thanh Toán
                </button>
            </div>
        </div>
    </div>
</div>
