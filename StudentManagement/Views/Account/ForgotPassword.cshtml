@model StudentManagement.Models.ViewModels.ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quên Mật Khẩu - Classe369</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-container">
        <div class="auth-box auth-box-small">
            <div class="auth-form-container">
                <button type="button" class="btn-close-modal" onclick="window.location.href='@Url.Action("Login", "Account")'">
                    <i class="fas fa-times"></i>
                </button>

                <div class="text-center mb-4">
                    <div class="forgot-password-icon">
                        <i class="fas fa-lock fa-3x"></i>
                    </div>
                    <h2 class="auth-title">QUÊN MẬT KHẨU?</h2>
                    <p class="text-muted">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu</p>
                </div>

                <form asp-action="ForgotPassword" method="post" class="auth-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Nhập email của bạn" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="fas fa-paper-plane"></i> Gửi Yêu Cầu
                    </button>

                    <div class="text-center">
                        <a asp-action="Login" class="back-to-login">
                            <i class="fas fa-arrow-left"></i> Quay lại đăng nhập
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
